{
  "compilerOptions": {
    "target": "esnext",
    "allowJs": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "lib": ["dom", "es2015", "es2017"],
    "jsx": "preserve"
  },
  "exclude": ["src/lambda"],
  "include": ["src"]
}
